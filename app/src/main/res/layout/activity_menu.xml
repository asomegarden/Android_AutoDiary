<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:launchMode="singleTask"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#C9CDD2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메뉴"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/ver"
        android:fontFamily="@font/nanumbarunpen"
        android:textColor="#000000"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:id="@+id/btnBack">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_back"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="일기장"
        android:id="@+id/goDiary"
        android:fontFamily="@font/nanumbarunpen"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_below="@+id/ver"
        android:padding="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="일기 목록"
        android:id="@+id/DiaryView"
        android:fontFamily="@font/nanumbarunpen"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_below="@+id/goDiary"
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="투두리스트"
        android:id="@+id/goTodo"
        android:fontFamily="@font/nanumbarunpen"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_below="@+id/DiaryView"
        android:padding="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="설정"
        android:id="@+id/goOption"
        android:fontFamily="@font/nanumbarunpen"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_below="@+id/goTodo"
        android:padding="10dp"/>
</RelativeLayout>